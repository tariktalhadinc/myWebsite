@using myWebsite.Models.Entitiy
@model List<Iletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">

                        </div>
                        <!-- /.card-header -->
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-danger">
                                                @item.Konu
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))</span>
                                                <h3 class="timeline-header"><a href="#">@item.Kimden</a> size mesaj gönderdi</h3>
                                                <div class="timeline-body">
                                                    @item.Mesaj
                                                </div>
                                                <div class="timeline-footer">
                                                    <a href="@item.Mail" class="btn btn-primary btn-sm">@item.Mail</a>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                    <!-- timeline time label -->

                                </div>
                            </div>

                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>
</html>
